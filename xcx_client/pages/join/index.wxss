/* pages/join/index.wxss */
.room-head{
  font-size: 16px;
  padding-bottom: 10px;
  margin-bottom: 10px; 
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ddd;
}
.source, .target{
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  word-break: break-all;
}
.source{
  height: 250px;
  padding-bottom: 10px;
  border-bottom: 1px solid #ddd;
}

.box-group{
  width: 100%;
  position: fixed;
  bottom: 20px;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.box-group button{
  width: 100px;
  margin: 0 15px;
}
